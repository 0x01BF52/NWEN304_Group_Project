<body>
<%- include('./components/navbar'); %>


<h5 class='m-3'>
    You are viewing <%= items.length %> items. Total <%= items.length %> in database.
</h5>
<div class="accordion ml-5 mr-5 mb-3" id="accordion">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h2 class="mb-0">
                <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse"
                        data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Add new product
                </button>
            </h2>
        </div>

        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body">
                <div class="form-group">
                    <label for="product-name" class="col-sm-2 control-label">Product Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control product-input" id="product-name" placeholder="Enter product name here">
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label for="product-price" class="col-sm-2 control-label">Price</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control product-input" id="product-price" placeholder="Enter price here">
                        </div>
                    </div>
                </div>

                <div class="form-group col-sm-10">
                    <label for="product-type">Type</label>
                    <select id="product-type" class="form-control">
                        <option>T-shirts</option>
                        <option>Pants</option>
                        <option>Pants</option>
                        <option>Hoodies</option>
                        <option>Suits & Blazers</option>
                        <option>Underwear</option>
                        <option>Socks</option>
                        <option>Accessories</option>
                    </select>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <label for="description">Description</label>
                        <textarea class="form-control product-input" id="product-description" rows="3"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label for="product-price" class="col-sm-2 control-label">Image URL</label>
                        <div class="col-sm-10">
                            <input type="url" class="form-control product-input" id="product-image" placeholder="Enter Image URL here">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" id="add-product" class="btn btn btn-primary">Add product</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
