<div>
    <% for(const item of items) { %>
        <div class='card ml-5 mr-5 mb-3 cart-item'>
            <div class='container'>
                <div class='row align-items-center'>
                    <div class='col-3'>
                        <img src=<%= item.images[0] %> />
                    </div>
                    <div class='col-3'>
                        <div>
                            <%= item.productInfo.title %>
                        </div>

                        <div>
                            $<%= item.productInfo.price %>
                        </div>
                    </div>
                    <div class='id'>
                        <label id='label-id'><%= item.id %></label>
                    </div>
                    <div class="ml-auto">
                        <button class='btn btn-primary ml-3 button-delete btn-danger'>
                            Delete
                        </button>
<!--                        <button class='btn btn-primary ml-5 button-update'>-->
